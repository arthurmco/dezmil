<%= link_to 'Nova meta!', new_goal_path, class: 'btn btn-primary' %>
<table class="table table-stripped">
  <thead>
    <tr>
      <th>Categoria</th>
      <th>Meta</th>
      <td></td>
    </tr>
  </thead>
  <% @goals.each do |goal| %>
    <tr>
      <td><%= Category.find(goal.category_id).display_name %></td>
      <td><%= goal.max %></td>
    </tr>
  <% end %>
</table>
