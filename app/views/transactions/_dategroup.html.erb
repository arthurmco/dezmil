<%if @d %><h1><%= link_to @d.strftime("%B"), "/transactions/#{@d.year}/#{@d.month}/", class: 'no-text-decoration' %></h1><% end %>
<% if @transactions %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Data</th>
      <th scope="col">Entrada</th>
      <th scope="col">Saída</th>
  </thead>
  <tbody>
    <% @transactions.each do |t| %>
      <tr>
        <td><%= t.date || t.week %></td>
        <td><%= t._credit %></td>
        <td><%= t._debit %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% unless @grouped %>
<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Saída</th>
      <th>Entrada</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Total</th>
      <td id='total-credit'><%= @total_in %></td>
      <td id='total-debit'><%= @total_out %></td>
    </tr>
  </tbody>
</table>
<% end %>
<% else %>
  Sem dados!
<% end %>
