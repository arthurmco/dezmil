<div class="input-group">
  <%= link_to 'anterior', "/transactions/#{@d.prev_month.year}/#{@d.prev_month.month}", id: :prev, class: 'btn btn-primary form-control' %>
  <%= link_to 'proximo', "/transactions/#{@d.next_month.year}/#{@d.next_month.month}", id: :next, class: 'btn btn-primary form-control'  %>
  <%= select_tag 'groupby', groups, class: 'custom-select' %>
  </select>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Data</th>
      <th scope="col">Memo</th>
      <th scope="col">Valor</th>
      <th scope="col">Categoria</th>
    </tr> 
  </thead>
  <tbody>
    <% @transactions.each do |t| %>
      <tr>
        <td><%= t.date %></td>
        <td><%= t.memo %></td>
        <td><%= t.amount %></td>
        <td><%= select_tag 'category',
                categories(t).html_safe,
                class: 'custom-select category-select',
                'data-transaction' => t.id.to_s,
                style: "background-color: #{t.category&.color || 'white'}"
            %></td>
      </tr>
    <% end %>
  </tbody>
</table>
